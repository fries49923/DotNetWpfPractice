<Window x:Class="WpfUserControlAnimationTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUserControlAnimationTest"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450"
        Width="450"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <local:AnimeUserControl PlayFlag="{Binding ElementName=ckbPlay, Path=IsChecked}"/>

        <CheckBox x:Name="ckbPlay"
                  Margin="178,380,178,0"
                  VerticalAlignment="Top"
                  FontSize="20"
                  Content="Play"/>

    </Grid>

</Window>
