<Window x:Class="WpfAttachedPropAndCtTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAttachedPropAndCtTest"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="450"
        Height="450"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <Style x:Key="TestButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="LightSkyBlue"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>

            <Setter Property="Template">

                <Setter.Value>

                    <ControlTemplate TargetType="Button">

                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="DarkSlateGray"
                                BorderThickness="2">

                            <Grid VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <md:PackIcon x:Name="mdIcon"
                                             Margin="10,0"
                                             Width="24"
                                             Height="24"
                                             Kind="Fries"
                                             Visibility="Visible"
                                             Foreground="{Binding Path=(local:AttachedProp.IconFill),
                                                                  RelativeSource={RelativeSource TemplatedParent}}"/>

                                <ContentPresenter Grid.Column="1"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>

                            </Grid>

                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Also can use converter -->
                            <Trigger Property="local:AttachedProp.ShowIcon" Value="False">
                                <Setter TargetName="mdIcon"
                                        Property="Visibility"
                                        Value="Collapsed"/>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>

        <StackPanel Margin="20">

            <Button Style="{StaticResource TestButtonStyle}"
                    Foreground="DarkSlateBlue"
                    local:AttachedProp.IconFill="MediumPurple"
                    Content="Button 1"/>

            <Button Style="{StaticResource TestButtonStyle}"
                    Background="MediumSeaGreen"
                    Foreground="White"
                    local:AttachedProp.IconFill="Goldenrod"
                    Content="Button 2"/>

            <Button Style="{StaticResource TestButtonStyle}"
                    local:AttachedProp.ShowIcon ="False"
                    Content="Button 3"/>

            <Button Content="Button 4">
                
                <Button.Style>
                    <Style TargetType="Button"
                           BasedOn="{StaticResource TestButtonStyle}">
                        <Setter Property="local:AttachedProp.IconFill" Value="FireBrick"/>
                        <Setter Property="Background" Value="LightCoral"/>
                        <Setter Property="Foreground" Value="White"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="local:AttachedProp.IconFill"
                                        Value="DarkOrange"/>
                                <Setter Property="Foreground" Value="WhiteSmoke"/>
                                <Setter Property="Background" Value="IndianRed"/>
                            </Trigger>
                        </Style.Triggers>
                        
                    </Style>
                </Button.Style>
                
            </Button>

        </StackPanel>

    </Grid>

</Window>
