<Window x:Class="WpfAttachedPropAndCtTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAttachedPropAndCtTest"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="450"
        Height="450"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <Style x:Key="TestButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Yellow"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>

            <Setter Property="Template">

                <Setter.Value>

                    <ControlTemplate TargetType="Button">

                        <Border Background="{TemplateBinding Background}">

                            <Grid VerticalAlignment="Center">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <md:PackIcon Margin="10,0"
                                             Width="20"
                                             Height="20"
                                             Kind="Fries"
                                             Foreground="{Binding Path=(local:AttachedProp.IconFill),
                                                                  RelativeSource={RelativeSource TemplatedParent}}"/>

                                <ContentPresenter Grid.Column="1"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>

                            </Grid>

                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>

        <StackPanel Margin="20">

            <Button Style="{StaticResource TestButtonStyle}"
                    Foreground="Chocolate"
                    local:AttachedProp.IconFill="Blue"
                    Content="Button 1"/>

            <Button Style="{StaticResource TestButtonStyle}"
                    Background="AliceBlue"
                    Foreground="Red"
                    local:AttachedProp.IconFill="HotPink"
                    Content="Button 1"/>

        </StackPanel>

    </Grid>

</Window>
